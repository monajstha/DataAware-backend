generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Core conceptual building blocks

model Permission {
  id            Int    @id @default(autoincrement())
  category      String
  name          String @unique
  description   String
  protectionTip String
  sensitivity   String
  riskScore     Float
}

model Tracker {
  id            Int    @id @default(autoincrement())
  name          String @unique
  purpose       String
  description   String
  protectionTip String
  riskScore     Float
}

model Sensor {
  id                   Int    @id @default(autoincrement())
  name                 String @unique
  description          String
  riskScore            Float
  possibleInterference String
}

// App categories or archetypes (not exhaustive per-app mapping)
model AppCategory {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  permissions Json
  trackers    Json
  sensors     Json
  Scenario    Scenario[]
}

// User scenarios - educational, not tied to real data
model Scenario {
  id              Int          @id @default(autoincrement())
  title           String
  description     String
  riskSummary     String
  valueSummary    String
  appCategoryName String?
  appCategory     AppCategory? @relation(fields: [appCategoryName], references: [name])
}

// DataType as separate model for easy reuse & consistent economic values
model DataType {
  id               Int     @id @default(autoincrement())
  name             String  @unique
  category         String
  economicValueUsd Float
  description      String?
  riskLevel        String
  commonUses       String
  protectionTip    String
}

model AssessmentInsight {
  id             Int      @id @default(autoincrement())
  sessionId      String   @unique @db.Uuid
  startTimestamp DateTime
  createdAt      DateTime @default(now())

  // Assessment Data
  preScore     Int?
  preAnswers   Json? // Array of answer indices
  preTimeSpent Int? // seconds
  preTimestamp DateTime?

  postScore     Int?
  postAnswers   Json? // Array of answer indices
  postTimeSpent Int? // seconds
  postTimestamp DateTime?

  improvement Int? // calculated: postScore - preScore

  // Learning Behavior
  modulesCompleted Json // Array of module IDs
  totalTimeSpent   Int  @default(0) // seconds
  timePerModule    Json // Object: { moduleId: timeInSeconds }
  quizzesAttempted Int  @default(0)

  // Optional User Data
  userName String? @db.VarChar(255)
  feedback String? @db.Text

  // User Context (Demographics)
  ageRange              String? @db.VarChar(20)
  techProficiency       String? @db.VarChar(50)
  priorPrivacyKnowledge String? @db.VarChar(50)
  referralSource        String? @db.Text

  @@index([sessionId])
  @@index([createdAt])
  @@map("assessment_insights")
}
